<Window x:Class="HopfieldNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Symulator sieci Hopfielda" Height="414.261" Width="600">
    <Grid Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition/>
            <RowDefinition Height="100" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button2" Content="Iteruj" Grid.Row="3" HorizontalAlignment="Left"  Width="75" Click="Button_Click_1" Grid.Column="0" Margin="10,0,0,0" Height="21" VerticalAlignment="Top"/>
        <TextBox x:Name="textBlock1" Grid.Column="0"  Grid.Row="1" HorizontalAlignment="Stretch" Height="Auto" Margin="10,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Stretch" Width="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <Canvas Grid.Row="1"  x:Name="weightsWisualization" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Margin="0,10,0,0"  Width="auto" SizeChanged="weightsWisualization_SizeChanged"/>
        <Canvas  x:Name="neuronsWisualization" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Grid.Row="2"/>
        <StatusBar Height="Auto" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Grid.ColumnSpan="2">
            <Label x:Name="StatusLabel" Content=""/>
        </StatusBar>
        <Menu HorizontalAlignment="Stretch" Height="30" VerticalAlignment="Stretch"  Width="Auto" Grid.ColumnSpan="2"/>
        <Canvas x:Name="summer" Grid.Column="1" HorizontalAlignment="Left" Height="100" Grid.Row="2" VerticalAlignment="Top" Width="296"/>

    </Grid>
</Window>
